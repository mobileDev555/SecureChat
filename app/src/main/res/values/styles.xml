<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:activatedBackgroundIndicator">@drawable/navigation_background</item>
    </style>
    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/myriadpro_regular</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="edit_text_style_message">
        <item name="android:background">@color/Edit_text_background</item>
        <item name="android:textColor">@color/Edit_text_color</item>
        <item name="android:fontFamily">@font/arialregular</item>
        <item name="android:textColorHint">@color/Edit_text_hint_color</item>
    </style>

    <style name="text_view_style">
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@color/Edit_text_background</item>
        <item name="android:textColor">@color/Edit_text_color</item>
        <item name="android:fontFamily">@font/quicksandregular</item>
    </style>

    <style name="dialog_animation_attechment">
        <item name="android:windowEnterAnimation">@anim/bottom_in</item>
        <item name="android:windowExitAnimation">@anim/bottom_out</item>
    </style>

    <style name="save_button_style">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/quicksandbold</item>
        <item name="android:background">@color/buttoncolor</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="menu_app_title_style">
        <item name="android:textSize">20sp</item> <!-- menu item text size-->
        <item name="android:singleLine">true</item>
    </style>
    <style name="edit_text_style_chat_window">

        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:background">@drawable/edittext_bottom_line</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/arialregular</item>
        <item name="android:textColorHint">@color/Edit_text_hint_color</item>
    </style>
    <style name="FullscreenTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="NavigationTheme" parent="AppTheme">
        <item name="listPreferredItemHeightSmall">60dp</item>

    </style>

    <style name="dialog_animation_from_center">
        <item name="android:windowEnterAnimation">@anim/grow_out</item>
        <item name="android:windowExitAnimation">@anim/grow_in</item>
    </style>

    <style name="full_screen_dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>
    
    <style name="edit_text_style">
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:background">@drawable/edit_text_bg</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/Edit_text_color</item>
        <item name="android:fontFamily">@font/arialregular</item>
        <item name="android:textColorHint">@color/Edit_text_hint_color</item>
    </style>


    <style name="button_style">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/quicksandbold</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="button_style_black">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/quicksandbold</item>
        <item name="android:background">@drawable/button_background_black</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:textSize">17sp</item>
    </style>



    <style name="seekBar">
        <item name="android:minHeight">3dip</item>
        <item name="android:maxHeight">3dip</item>
        <item name="android:progressDrawable">@drawable/progress_seekbar</item>
        <item name="android:thumb">@drawable/circle1</item>
        <item name="android:layout_weight">1</item>
    </style>


    <style name="dialog_animation">
        <item name="android:windowEnterAnimation">@anim/top_in</item>
        <item name="android:windowExitAnimation">@anim/bottom_out</item>
    </style>

    <style name="NotificationTitle">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyToolbar" parent="AppTheme">
        <item name="searchViewStyle">@style/searchStyle</item>
    </style>

    <style name="searchStyle" parent="Widget.AppCompat.SearchView.ActionBar">
        <item name="queryHint">@string/search</item>
        <item name="searchIcon">@null</item>
    </style>

    <style name="detail_time_stamp">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:gravity">right</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/time_stamp</item>
    </style>

    <style name="DialtactsDialpadButtonStyle">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_weight">0.36</item>
        <!-- <item name="android:layout_margin">0.01dp</item> -->
        <item name="android:background">@color/white</item>
        <!--
             <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">?attr/actionBarItemBackground</item>
        -->
    </style>

    <style name="ButtonBarButton" parent="@android:style/Widget.Button" />

    <style name="ButtonBar" parent="@android:style/ButtonBar" />
    <style name="ButtonBar.AlertDialog" parent="@android:style/ButtonBar" />

    <style name="list_left_column">
        <item name="android:layout_width">68dip</item>
        <item name="android:layout_height">68dip</item>
    </style>

    <style name="CustomTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowDisablePreview">true</item>

        <!--<item name="searchViewStyle">@style/MySearchViewStyle</item>-->

    </style>
    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="TextViewSettingPrimary">
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/arialbold</item>
        <item name="android:textColor">@color/setting_text_color</item>
    </style>



</resources>

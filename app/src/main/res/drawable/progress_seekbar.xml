<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <gradient
                android:angle="180.0"
                android:endColor="#4d5364"
                android:startColor="#4d5364" />
        </shape>
    </item>
    <item>
        <clip>
            <shape android:shape="rectangle">
                <corners android:radius="10dp" />
                <gradient
                    android:angle="90.0"
                    android:endColor="@color/lightest_green_blue"
                    android:startColor="@color/border"
                    android:type="linear" />
            </shape>
        </clip>
    </item>
    <item>
        <clip>
            <shape android:shape="rectangle">
                <corners android:radius="10dp" />
                <gradient
                    android:angle="90.0"
                    android:endColor="@color/lightest_green_blue"
                    android:startColor="@color/border" />
            </shape>
        </clip>
    </item>
</layer-list>

<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:swipe="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackgroundBorderless"
    swipe:leftEdgeSwipeOffset="0dp"
    swipe:rightEdgeSwipeOffset="0dp">
    <LinearLayout
        android:id="@+id/lyr_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/deletebackgroundcolor"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp"
        android:visibility="visible">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/delete" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksandbold"
            android:text="@string/delete"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lyr_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_chat_list_item"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">
        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:button="@drawable/custom_check_box"
            android:enabled="false"
            android:visibility="gone" />
        <RelativeLayout
            android:id="@+id/Single_bagde"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible">
            <TextView
                android:id="@+id/txt_title"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/badge_text_bg_black"
                android:fontFamily="@font/quicksandregular"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="-8dp"
                android:layout_toRightOf="@id/txt_title"
                android:background="@drawable/user_badge_red"
                android:gravity="center"
                android:text="99+"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:visibility="gone" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/group_bagde"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone">
            <ImageView
                android:id="@+id/txt_title1"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:background="@drawable/badge_text_bg_black"
                swipe:srcCompat="@drawable/ic_group_icon"
                android:gravity="center"
                android:padding="10dp"
                android:textColor="@color/white" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:fontFamily="@font/quicksandregular"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textColor="@color/white">
            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksandregular"
                android:singleLine="true"
                android:textStyle="bold"
                android:textSize="17dp"
                android:text="@string/app_name"
                android:textColor="@color/white" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/img_accept_status"
                    android:layout_width="20dp"
                    android:layout_height="15dp"
                    android:visibility="visible"
                    swipe:srcCompat="@drawable/img_send" />
                <ImageView
                    android:id="@+id/img_encrypted_type"
                    android:layout_width="20dp"
                    android:layout_height="15dp"
                    android:layout_gravity="bottom"
                    android:visibility="visible"
                    android:layout_marginRight="2dp"
                    swipe:srcCompat="@drawable/ic_camera_new" />
                <TextView
                    android:id="@+id/txt_encrypted"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/quicksandregular"
                    android:text="@string/encrypted_text"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </LinearLayout>
            <TextView
                android:id="@+id/txt_ecc_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/quicksandregular"
                android:text="@string/app_name"
                android:visibility="gone"
                android:textColor="@color/orange"
                android:textSize="12sp" />
        </LinearLayout>
        <ImageView
            android:id="@+id/img_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:visibility="gone"
            swipe:srcCompat="@drawable/img_group" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txt_missed_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:fontFamily="@font/quicksandregular"
                android:text="01:14"
                android:textColor="@color/white"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/total_unread_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/user_badge_sky_count"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_gravity="right|bottom"
                android:text="9"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:visibility="gone" />
            <TextView
                android:id="@+id/total_unread_msg1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/user_badge_sky_count"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_gravity="right|bottom"
                android:text="9"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:visibility="gone" />
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            swipe:srcCompat="@drawable/img_chevron_right_white" />
    </LinearLayout>
    
</com.daimajia.swipe.SwipeLayout>
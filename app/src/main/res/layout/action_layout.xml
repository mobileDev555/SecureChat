<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewActionTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="75dp"
            android:layout_marginLeft="75dp"
            android:layout_weight="1"
            android:fontFamily="@font/verdana_regular"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/imageViewSave"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="?android:selectableItemBackgroundBorderless"
            android:padding="5dp"
            android:src="@drawable/ic_download_new"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/imageViewEdit"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="?android:selectableItemBackgroundBorderless"
            android:padding="5dp"
            android:src="@drawable/ic_edit_n"
            android:visibility="gone" />


        <ImageView
            android:id="@+id/imageViewForward"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="?android:selectableItemBackgroundBorderless"
            android:padding="5dp"
            android:src="@drawable/ic_forward_new"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/imageViewDelete"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="?android:selectableItemBackgroundBorderless"
            android:padding="5dp"
            android:src="@drawable/ic_delete"
            android:visibility="gone" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="80dp"
        android:background="#3c3a3b" />


</LinearLayout>